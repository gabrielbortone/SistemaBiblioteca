@model Sistema_de_Biblioteca.ViewModels.EmprestimoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Editar o Empréstimo: </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DataLimiteEntrega" class="control-label"></label>
                <input asp-for="DataLimiteEntrega" class="form-control" />
                <span asp-validation-for="DataLimiteEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEntrega" class="control-label"></label>
                <input asp-for="DataEntrega" class="form-control" />
                <span asp-validation-for="DataEntrega" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlunoId" class="control-label"></label>
                <input asp-for="AlunoId" class="form-control" />
                <span asp-validation-for="AlunoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LivroId" class="control-label"></label>
                <input asp-for="LivroId" class="form-control" />
                <span asp-validation-for="LivroId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Listar">Voltar para a lista</a>
</div>

