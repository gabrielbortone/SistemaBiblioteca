@model IEnumerable<Sistema_de_Biblioteca.ViewModels.AlunoViewModel>

@{
    ViewData["Title"] = "View";
}

<h1>Listando todos os funcionários</h1>

<p>
    <a asp-action="Cadastrar">Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Sobrenome
            </th>
            <th>
                CPF
            </th>
            <th>
                Endereço - CEP
            </th>
            <th>
                Endereço - Bairro
            </th>
            <th>
                Endereço - Cidade
            </th>
            <th>
                Endereço - Estado
            </th>
            <th>
                Telefone - Tipo
            </th>
            <th>
                Telefone - DDD
            </th>
            <th>
                Telefone - Numero
            </th>
            <th>
                Email
            </th>
            <th>
                Matricula
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoVM.CEP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoVM.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoVM.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoVM.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneVM.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneVM.DDD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneVM.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matricula)
            </td>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Deletar" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
