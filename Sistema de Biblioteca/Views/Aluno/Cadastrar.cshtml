@model Sistema_de_Biblioteca.ViewModels.AlunoViewModel

@{
    ViewData["Title"] = "View";
}

<h1>Tela de Cadastro</h1>

<h4>Cadastrar aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sobrenome" class="control-label"></label>
                <input asp-for="Sobrenome" class="form-control" />
                <span asp-validation-for="Sobrenome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPF" class="control-label"></label>
                <input asp-for="CPF" class="form-control" />
                <span asp-validation-for="CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoVM.CEP" class="control-label"></label>
                <input asp-for="EnderecoVM.CEP" class="form-control" />
                <span asp-validation-for="EnderecoVM.CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoVM.Bairro" class="control-label"></label>
                <input asp-for="EnderecoVM.Bairro" class="form-control" />
                <span asp-validation-for="EnderecoVM.Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoVM.Cidade" class="control-label"></label>
                <input asp-for="EnderecoVM.Cidade" class="form-control" />
                <span asp-validation-for="EnderecoVM.Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoVM.Estado" class="control-label"></label>
                <input asp-for="EnderecoVM.Estado" class="form-control" />
                <span asp-validation-for="EnderecoVM.Estado" class="text-danger"></span>
            </div>
    <div class="form-group">
        <label asp-for="TelefoneVM.Tipo" class="control-label"></label>
        <select asp-for="TelefoneVM.Tipo" asp-items="Html.GetEnumSelectList<TipoTelefone>()">
            <option selected="selected" value="">Please select</option>
        </select>
        <span asp-validation-for="TelefoneVM.Tipo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelefoneVM.DDD" class="control-label"></label>
        <input asp-for="TelefoneVM.DDD" class="form-control" />
        <span asp-validation-for="TelefoneVM.DDD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TelefoneVM.Numero" class="control-label"></label>
        <input asp-for="TelefoneVM.Numero" class="form-control" />
        <span asp-validation-for="TelefoneVM.Numero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Matricula" class="control-label"></label>
        <input asp-for="Matricula" class="form-control" />
        <span asp-validation-for="Matricula" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Listar">Voltar para a lista</a>
</div>

