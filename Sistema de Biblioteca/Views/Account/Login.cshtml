@model LoginViewModel

<table>
    <tr>
        <td>
            <div class="row loginForm">
                <div class="col-md-12">
                    <h4>Informe as credenciais do usuário</h4>
                    <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                        <hr />
                        <div class="form-group">
                            <label asp-for="Username" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Username" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Senha" class="col-md-2 control-label"></label>
                            <div class="col-md-12">
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group formPullRightButton">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-success" value="Log in" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>
