@model Sistema_de_Biblioteca.Models.Livro

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deletar livro</h1>

<h3>Você tem certeza que deseja deletar esse livro?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            Autor: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class = "col-sm-2">
            Edicao :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Edicao)
        </dd>
        <dt class = "col-sm-2">
            Ano de Publicação :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ano)
        </dd>
        <dt class = "col-sm-2">
            Número de páginas :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Paginas)
        </dd>
        <dt class = "col-sm-2">
            Gênero :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class = "col-sm-2">
            Editora :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Editora)
        </dd>
        <dt class = "col-sm-2">
            Status :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="LivroId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Listar">Voltar para a lista</a>
    </form>
</div>
